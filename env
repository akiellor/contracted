#!/usr/bin/env bash

rvm list | grep ree-1.8.7-2011.03 > /dev/null
if ! [[ $? -eq 0 ]]; then
  rvm install ree
fi

rvm use ree@contracted --create

gem list bundler | grep bundler > /dev/null
if ! [[ $? -eq 0 ]]; then
  gem install bundler
fi

bundle check || bundle

export BUNDLE_GEMFILE=./Gemfile
bundle exec $@
