#!/bin/bash -e

RUBY_VERSION="ree-1.8.7-2011.03"

rvm list strings | grep "$RUBY_VERSION" > /dev/null
if ! [[ $? -eq 0 ]]; then
  rvm install $RUBY_VERSION
fi
rvm use $RUBY_VERSION@contracted --create

gem list bundler | grep bundler > /dev/null
if ! [[ $? -eq 0 ]]; then
  gem install bundler
fi

bundle check || bundle

$@
